<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="养犬人姓名:" />

                <EditText
                    android:enabled="false"

                    android:id="@+id/et_personName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5FFFA"
                    android:paddingLeft="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="身份证号:" />

                <EditText
                    android:id="@+id/et_personId"
                    android:enabled="false"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5FFFA"
                    android:paddingLeft="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="犬名:" />

                <EditText
                    android:enabled="false"
                    android:id="@+id/et_dogName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F5FFFA"
                    android:paddingLeft="8dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="违规情况:" />

                <EditText
                    android:id="@+id/et_violation_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textarea_shape"
                    android:minLines="3"
                    android:paddingLeft="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="处理结果:" />

                <EditText
                    android:id="@+id/et_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textarea_shape"
                    android:minLines="3"
                    android:hint="待处理..."
                    android:paddingLeft="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lay_camera_add"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_camera_add"
                            android:layout_width="30dp"
                            android:layout_height="30dp"

                            android:background="@drawable/ic_add" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_camera_left"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_camera_left"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_left" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_camera_right"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_camera_right"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_right" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lay_camera_delete"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_camera_delete"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_delete" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_violation"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ImageView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF0000"
                android:layout_marginBottom="40dp">

                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_submit"
                    android:text="提 交"
                    android:textSize="12pt"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
